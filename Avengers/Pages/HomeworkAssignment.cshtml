@page
@model Avengers.Pages.HomeworkAssignmentModel
@{
    ViewData["Title"] = "Homework Assignments";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.css">
</head>
<body>
    <div id="main-wrapper">
        <div class="content-body">
            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title">Homework Assignments</h3>
                                <div class="table-responsive">
                                    <table class="table table-xs mb-0">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Teacher</th>
                                                <th>Title</th>
                                                <th>Subject</th>
                                                <th>Due Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.HomeworkAssignments == null || !Model.HomeworkAssignments.Any())
                                            {
                                                <tr>
                                                    <td colspan="6" class="text-center">@Model.Message</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                @foreach (var homework in Model.HomeworkAssignments)
                                                {
                                                    <tr>
                                                        <td>@homework.Id</td>
                                                        <td>@homework.Teacher?.Name ?? "N/A"</td>
                                                        <td>@homework.Title ?? "N/A"</td>
                                                        <td>@homework.Subject?.Name ?? "N/A"</td>
                                                        <td>@homework.DueDate?.ToString() ?? "N/A"</td>
                                                        <td>
                                                            <form method="post" asp-page-handler="Delete" asp-route-id="@homework.Id" style="display:inline;">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <h3 class="card-title mt-5">Create New Assignment</h3>
                                <form method="post" asp-page-handler="Create" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label asp-for="NewHomeworkAssignment.Title"></label>
                                        <input asp-for="NewHomeworkAssignment.Title" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NewHomeworkAssignment.DueDate"></label>
                                        <input asp-for="NewHomeworkAssignment.DueDate" class="form-control" type="date" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NewHomeworkAssignment.SubjectId">Subject</label>
                                        <select asp-for="NewHomeworkAssignment.SubjectId" asp-items="Model.SubjectsList" class="form-control">
                                            <option value="">Select Subject</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NewHomeworkAssignment.TeacherId">Teacher</label>
                                        <select asp-for="NewHomeworkAssignment.TeacherId" asp-items="Model.TeachersList" class="form-control">
                                            <option value="">Select Teacher</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NewHomeworkAssignment.Description"></label>
                                        <textarea asp-for="NewHomeworkAssignment.Description" class="form-control" id="Description"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="Files">Upload Files</label>
                                        <input type="file" id="Files" name="Files" class="form-control" multiple />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
    <script src="plugins/common/common.min.js"></script>
    <script src="js/custom.min.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/gleek.js"></script>
    <script src="js/styleSwitcher.js"></script>
</body>
