            </div>
            <div class="form-group">
                <label asp-for="Homework_assignments.Title" class="control-label"></label>
                <input asp-for="Homework_assignments.Title" class="form-control" />
                <span asp-validation-for="Homework_assignments.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Homework_assignments.Description" class="control-label"></label>
                <textarea asp-for="Homework_assignments.Description" class="form-control"></textarea>
                <span asp-validation-for="Homework_assignments.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
