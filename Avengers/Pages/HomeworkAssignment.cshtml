@using Microsoft.AspNetCore.Mvc

@{
    ViewData["Title"] = "Homework Assignment";
}

<h1>Homework Assignment</h1>

<h4>Homework_assignments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
