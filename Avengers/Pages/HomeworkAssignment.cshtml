            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Homework_assignments.SubjectId" class="control-label"></label>
                <select asp-for="Homework_assignments.SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Homework_assignments.TeacherId" class="control-label"></label>
                <select asp-for="Homework_assignments.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
