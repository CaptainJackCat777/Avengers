@page "{id:int}"
@model Avengers.Pages.ProfileModel
@using Avengers.Models

@{
    ViewData["Title"] = "User Profile";
    var randomColor = Model.GetRandomColor();
}

<h1>User Profile</h1>

<div class="profile-card">
    <div class="profile-icon" style="background-color: @randomColor;">
        <span>@Model.User.Name[0]</span>
    </div>
    <div class="profile-details">
        <h2>@Model.User.Name</h2>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Phone:</strong> @Model.User.MobilePhone</p>
        <p><strong>Role:</strong> @Model.User.UserRole</p>
        <!-- Add more fields as needed -->
    </div>
</div>

<style>
    .profile-card {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        max-width: 600px;
        margin: auto;
    }

    .profile-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        color: #fff;
        margin-right: 20px;
    }

    .profile-details h2 {
        margin: 0;
    }

    .profile-details p {
        margin: 5px 0;
    }
</style>
